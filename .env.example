# Copy this file to .env and edit
NR_KEY=your_new_relic_license_key
# Profile and mode settings
PROFILE=balanced        # ultra / balanced / optimized / lean / micro
MODE=docker             # docker | kind
DEMO_ID=demo-local      # Default demo identifier

# Profile flags (these are derived from PROFILE in Makefile)
NR_USE_ULTRA=false
NR_USE_BALANCED=true
NR_USE_OPTIMIZED=false
NR_USE_LEAN=false
NR_USE_MICRO=false

# Container registry
REGISTRY=ghcr.io

# System settings
HOST_ROOT_PATH=/hostfs
MEM_LIMIT_MIB=256

# Thresholds for filtering
IDLE_CPU_THRESHOLD=0.005
IDLE_RSS_THRESHOLD=31457280
IDLE_CPU_THRESHOLD_LEAN_MICRO=0.05
IDLE_RSS_THRESHOLD_LEAN_MICRO=52428800

# New Relic exporter settings
OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp.nr-data.net
OTEL_EXPORTER_OTLP_COMPRESSION=zstd
